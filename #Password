password = "Love"
guess = ""
guess_count = 0
guess_limit = 3
out_of_guesses = False

while guess != password and not (out_of_guesses):
    if guess_count < guess_limit:
        guess = input("Enter Password Now: ")
        guess_count += 1
    else:
         out_of_guesses = True

if not out_of_guesses:
    print("You Win Congratulation: ")
else:
    print("You Enter wrong password")

